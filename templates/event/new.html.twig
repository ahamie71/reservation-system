{% extends 'base.html.twig' %}

{% block title %}Créer un événement{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center text-warning mb-4">
        <i class="bi bi-calendar-plus"></i> Créer un nouvel événement
    </h1>

    <div class="card shadow bg-dark text-light p-4">
        {{ form_start(form, {
            'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'},
            'multipart': true
        }) }}

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.name, 'Nom de l\'événement') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="col-md-6 mb-3">
                {{ form_label(form.date, 'Date et heure') }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.location, 'Lieu') }}
                {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.location) }}
            </div>

            <div class="col-md-6 mb-3">
                {{ form_label(form.price, 'Prix (€)') }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.price) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.image, 'Image (optionnelle)') }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.image) }}
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-warning btn-lg px-5">
                <i class="bi bi-save"></i> {{ button_label|default('Enregistrer') }}
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
